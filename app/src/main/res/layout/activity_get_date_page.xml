<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GetDatePage">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background2" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="344dp"
        android:layout_height="48dp"
        android:background="@color/white"
        android:entries="@array/type"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="169dp" />

    <Button
        android:id="@+id/Datebtn"
        style="?android:spinnerStyle"
        android:layout_width="350dp"
        android:layout_height="62dp"
        android:text="2024/01/01"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="285dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select illness:"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="114dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Date:"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="241dp" />

    <Button
        android:id="@+id/Timebtn"
        style="?android:spinnerStyle"
        android:layout_width="340dp"
        android:layout_height="74dp"
        android:text="10:00"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="416dp" />

    <view
        android:id="@+id/view"
        class="com.google.android.material.appbar.AppBarLayout"
        android:layout_width="418dp"
        android:layout_height="97dp"
        tools:layout_editor_absoluteX="-6dp"
        tools:layout_editor_absoluteY="634dp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/profile_icon"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="648dp" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/calender_icon"
        tools:layout_editor_absoluteX="90dp"
        tools:layout_editor_absoluteY="656dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Time:"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="375dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule "
        android:textSize="34sp"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="36dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/profile_icon"
        tools:layout_editor_absoluteX="345dp"
        tools:layout_editor_absoluteY="31dp" />

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="313dp"
        android:layout_height="42dp"
        android:text="Schedule"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="524dp" />

</androidx.constraintlayout.widget.ConstraintLayout>